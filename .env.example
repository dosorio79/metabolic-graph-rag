# Neo4j (container)
NEO4J_AUTH=neo4j/testtest
NEO4J_dbms_default__database=neo4j

# Neo4j (app/client)
APP_NEO4J_URI=bolt://localhost:7687
APP_NEO4J_USER=neo4j
APP_NEO4J_PASSWORD=testtest

# KEGG
KEGG_BASE_URL=https://rest.kegg.jp
KEGG_PATHWAY_ID=hsa00010

# Backend
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
APP_RAG_CONTEXT_MAX_REACTIONS=8
APP_RAG_CONTEXT_MAX_COMPOUNDS=8
APP_RAG_CONTEXT_MAX_ENZYMES=12
APP_LLM_API_BASE=https://api.openai.com/v1
APP_LLM_API_KEY=
APP_LLM_MODEL=gpt-4o-mini
APP_LLM_TEMPERATURE=0.2
APP_LLM_MAX_TOKENS=400
APP_LLM_TIMEOUT_SECONDS=30

# Environment
ENV=development

# Airflow admin user
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin

# Optional: install extra python packages into airflow containers at startup
_PIP_ADDITIONAL_REQUIREMENTS=

# Optional: local UID mapping for Airflow files (Linux)
AIRFLOW_UID=50000
